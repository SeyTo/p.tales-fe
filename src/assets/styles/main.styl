// override vuetify variables here

@import '~vuetify/src/stylus/app.styl'
@import './_vars.styl'

// use vuetify variables here

// --------------------------------- //


// v-jumbotron image fix
.jumbotron
  height t-img-jumbo-lg-h !important
.jumbotron__image
  width 100% !important
  height auto !important

// fix height when screen becomes small
@media $display-breakpoints.xs-only
  .jumbotron__image
    width auto !important
    height 100% !important

.fill-vh
  // compensates navbar height
  height 96vh
.fill-vw
  width 100vw
.fill-va
  @extend .fill-vh
  @extend .fill-vw

// Dialog overrides for all v-dialog
.dialog
  max-width 500px

.clickable
  cursor pointer
  transition: all .4s cubic-bezier(.25, .8, .25, 1)
  &:hover
    transition-property: box-shadow
    @extend .grey.lighten-3

a
  font-size 1.1rem
  font-weight bold

.bold
  font-weight bold
.thin
  font-weight 400
